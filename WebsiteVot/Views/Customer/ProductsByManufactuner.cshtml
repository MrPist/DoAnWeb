@model IEnumerable<WebsiteVot.Models.Mathang>

@{
    ViewData["Title"] = "@";
}
<div>
    <form asp-action="ProductsByName">
        <div>
            <input class="form-control" type="text" name="keyword" placeholder="Nhập từ khóa tìm kiếm" />
        </div>
        <div>
            <input class="btn btn-dark" type="submit" value="Tìm" />
        </div>
    </form>
</div>
<h1>Sản phẩm theo hãng sản xuất</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-3 d-flex">
            <div class="card text-center m-2 shadow">
                <div class="card-header bg-secondary text-white">
                </div>
                <div class="card-body">
                    <a asp-action="Details" asp-route-id="@item.MaMh">
                        <img src="~/images/@item.HinhAnh" style="max-width:100%">
                    </a>
                    @Html.DisplayNameFor(model => model.GiaBan):
                    <span class="text-danger"><strong>@Html.DisplayFor(modelItem => item.GiaBan)</strong></span>
                </div>
                <div class="card-footer bg-light">
                    <a asp-action="Details" asp-route-id="@item.MaMh">
                        <strong>@Html.DisplayFor(modelItem => item.Ten)</strong>
                    </a>
                </div>
            </div>
        </div>
    }
</div>
